.highlight {
	background-color: yellow;
}

.error {
	background-color: lightcoral;
	border-color: red;
}

/* Custom CSS for styling buttons and moving them down */
.form-group {
    margin-top: 20px; /* Move the form group down from the textarea */
}

/* Style the buttons */
.btn-custom {
    background-color: #007bff;
    color: #fff;
    border: none;
}

.btn-custom:hover {
    background-color: #0056b3;
}
    /* Style the close button with custom colors */
    .close {
        color: #007bff; /* Change the color to your preference */
        font-size: 24px; /* Adjust the font size as needed */
        font-weight: bold; /* Make it bold for emphasis */
    }

    /* Style the close button on hover */
    .close:hover {
        color: #0056b3; /* Change the color on hover if desired */
    }



